# ==========================================
# AUTONOMOUS WEBSITE SELLER - CONFIGURATION
# ==========================================

# Core Settings
NODE_ENV=development
PORT=3000
TZ=America/Chicago

# AI Services
OPENAI_API_KEY=your_openai_api_key_here
ANTHROPIC_API_KEY=your_anthropic_api_key_here

# Email Services
SMTP_HOST=smtp.gmail.com
SMTP_PORT=587
SMTP_USER=your_email@gmail.com
SMTP_PASS=your_app_password
FROM_NAME=Your Business Name
FROM_EMAIL=your_email@gmail.com

SENDGRID_API_KEY=your_sendgrid_key_here

# SMS Service
TWILIO_ACCOUNT_SID=your_twilio_sid
TWILIO_AUTH_TOKEN=your_twilio_token
TWILIO_PHONE_NUMBER=+1234567890

# Database
DATABASE_URL=postgresql://user:password@localhost:5432/autonomous_business
# Or for SQLite (development):
# DATABASE_URL=sqlite:data/autonomous-business.sqlite

# Google Services
GOOGLE_PLACES_API_KEY=your_google_places_key

# Payment Processing
STRIPE_SECRET_KEY=your_stripe_secret_key
PAYPAL_CLIENT_ID=your_paypal_client_id
PAYPAL_SECRET=your_paypal_secret

# Autonomous Engine Settings
ENABLE_AUTOMATION=true
AUTO_START_DISCOVERY=true
AUTO_START_OPTIMIZATION=true
MAX_EMAILS_PER_DAY=100
MAX_BUSINESSES_DISCOVERY_PER_DAY=200

# Week-long Experiment
RUN_DURATION_DAYS=7

# Competitor Analysis
ENABLE_COMPETITOR_SCRAPING=true
COMPETITOR_ANALYSIS_INTERVAL_HOURS=30

# Pricing Optimization
STARTING_PRICE=197
ENABLE_DYNAMIC_PRICING=true

# Testing
ENABLE_AB_TESTING=true
TEST_INTERVAL_HOURS=2

# Monitoring
LOG_LEVEL=info
ENABLE_METRICS_COLLECTION=true

# Cloud Deployment
RAILWAY_PUBLIC_DOMAIN=your_railway_domain
HEROKU_APP_NAME=your_heroku_app

# Redis (for job queue)
REDIS_URL=redis://localhost:6379